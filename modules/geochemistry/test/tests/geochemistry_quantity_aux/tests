  [./except1]
    type = RunException
    input = except1.i
    expect_err = 'Na does not appear in the model\'s geochemical system either as a basis or equilibrium species, but you requested an Aux involving it'
    requirement = 'An error will be thrown when trying to set AuxVariable information for species that do not exist'
    issues = '#15330'
    design = 'GeochemistryQuantityAux.md'
